                        % Label sides
                        \node[below] at (3,0)  { 7.5 cm }; 
                        \node[right] at (5.3,1.5) { 4.5 cm};
                        \node[above] at (3.3,3.1) { 4.5 cm};
                        \node[right] at (2.3,4) { 3 cm};
                        \node[above] at (1,5.2) { 3 cm};
                        \node[left] at (-0.5,2.5) { 7.5 cm};
                      \end{tikzpicture}
                    </latex-image>
                      
                    </image>
                    
                  </li>
                </ul>
              </p>
              <p>
                Add all the sides to get the perimeter.
              </p>
              <p>
                <md>
                  <mrow> \text{Perimeter}=\amp 7.5+7.5+4.5+4.5+3+3 </mrow>
                  <mrow> =\amp 30 \, \text{cm} </mrow>

